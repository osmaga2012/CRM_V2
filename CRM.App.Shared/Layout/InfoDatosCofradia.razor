@if (cofradia is not null)
{     
    <MudText Typo="Typo.h6">@cofradia.Nombre</MudText>
}

@*else
{
    <MudStack Spacing="1">
        <MudText Typo="Typo.h6">@cofradia.Nombre</MudText>
        <MudText Typo="Typo.subtitle2">@cofradia.RazonSocial</MudText>
        @if (!string.IsNullOrWhiteSpace(Direccion))
        {
            <MudText Typo="Typo.body2">@Direccion</MudText>
        }
        @if (!string.IsNullOrWhiteSpace(cofradia.Email))
        {
            <MudText Typo="Typo.body2">@cofradia.Email</MudText>
        }
        @if (!string.IsNullOrWhiteSpace(cofradia.Telefono))
        {
            <MudText Typo="Typo.body2">Tel: @cofradia.Telefono</MudText>
        }
    </MudStack>
} *@
