@using CRM.Dtos.Enums
@using Microsoft.FluentUI.AspNetCore.Components
@inherits LayoutComponentBase
@inject NavigationManager Nav
<LayoutView>
    <div class="layout-root">
        <header class="app-header" role="banner">
            <!-- contenido del header si hace falta -->
        </header>

        <div class="app-body">
            <nav class="sidebar" role="navigation" aria-label="Main navigation">
                <a class="sidebar-item @ActiveClass("/", false)" href="/">
                    <span class="icon">🏠</span>
                    <span class="text">Inicio</span>
                </a>
                <a class="sidebar-item @ActiveClass("/tramites", true)" href="/tramites">
                    <span class="icon">📄</span>
                    <span class="text">Trámites</span>
                </a>
                <a class="sidebar-item @ActiveClass("/barcos", true)" href="/barcos">
                    <span class="icon">⛴️</span>
                    <span class="text">Barcos</span>
                </a>
                <a class="sidebar-item @ActiveClass("/config", true)" href="/config">
                    <span class="icon">⚙️</span>
                    <span class="text">Config</span>
                </a>
            </nav>

            <main class="content" role="main">
                <div class="mobile-main">
                    @Body
                </div>
            </main>
        </div>

        <footer class="bottom-nav" role="navigation" aria-label="Bottom navigation">
            <a class="nav-item @ActiveClass("/", false)" href="/" aria-label="Inicio">
                <span class="nav-icon">🏠</span>
            </a>
            <a class="nav-item @ActiveClass("/tramites", true)" href="/tramites" aria-label="Trámites">
                <span class="nav-icon">📄</span>
            </a>
            <a class="nav-item @ActiveClass("/barcos", true)" href="/barcos" aria-label="Barcos">
                <span class="nav-icon">⛴️</span>
            </a>
            <a class="nav-item @ActiveClass("/config", true)" href="/config" aria-label="Configuración">
                <span class="nav-icon">⚙️</span>
            </a>
        </footer>
    </div>
</LayoutView>

